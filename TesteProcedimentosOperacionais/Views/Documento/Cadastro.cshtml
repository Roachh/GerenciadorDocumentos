@model DocumentoModel
@{
    ViewData["Title"] = "Cadastro de Documento";
}

<div class="text-center mb-5">
    <h1 class="display-4">Cadastro</h1>    
</div>

<form asp-controller="Documento" asp-action="Cadastrar" method="post">
  <div class="form-group mb-3">
    <label for="codigo" class="mb-1">Código</label>
    <input type="number" asp-for="Codigo" class="form-control" id="codigo">
  </div>
   <div class="form-group mb-3">
    <label for="titulo" class="mb-1">Título</label>
    <input type="text" asp-for="Titulo" class="form-control" id="titulo" placeholder="Título do Procedimento">
  </div>
   <div class="form-group mb-3">
    <label for="categoria" class="mb-1">Categoria</label>
    <input type="text" asp-for="Categoria" class="form-control" id="categoria" placeholder="Categoria do Procedimento">
  </div>
 <div class="form-group mb-3">
    <label for="processo" class="mb-1">Processo</label>
    <select asp-for="Processo" class="form-control" id="processo">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
    @*<div class="form-group mb-3">
    <label for="arquivo" class="mb-1">Arquivo</label>
    <input type="file" asp-for="Arquivo" class="form-control" id="arquivo">
  </div>*@
  <div class="form-group mb-3">
    <label for="arquivo" class="mb-1">Arquivo</label>
    <input type="text" asp-for="Arquivo" class="form-control" id="arquivo" placeholder="Arquivo">
  </div>
  <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>